{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td><img style="max-width:150px;" src="{{ asset(user_path~'/'~user.avatar)}}" class="img-thumbnail"/></td>
                <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.username }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
