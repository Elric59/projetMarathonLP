{% extends 'base.html.twig' %}


{% block title %}Home Page !{% endblock %}

{% block body %}


    <div class="container">



        <h1 class="mt-5 text-colorC">Nos nouveautés</h1>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% set cpt=0 %}
                {% for last_serie in last_series %}
                    {% if cpt==0 %}
                        <div class="carousel-item active ">
                            <div class=" p-2 d-flex justify-content-around align-items-center">
                                <div class="d-block">

                                    <img src="{{ base_url~last_serie.image }}" class="d-block" alt="...">
{#                                    <div class="carousel-caption d-none d-md-block text-dark">#}
{#                                        <h5>{{ base_url~last_serie.image }}</h5>#}
{#                                    </div>#}
                                </div>
                            </div>

                        </div>

                        {% set cpt=1 %}
                    {% else %}
                            <div class="carousel-item ">
                                <div class="p-2 d-flex justify-content-around align-items-center">
                                    <div class="d-block">
                                        <a href="">
                                        <img src="{{ base_url~last_serie.image }}" class="d-block" alt="...">
{#                                        <div class="carousel-caption d-none d-md-block text-dark">#}
{#                                            <h5>{{ base_url~last_serie.image }}</h5>#}
{#                                        </div>#}
                                        </a>
                                    </div>
                                </div>

                            </div>

                    {% endif %}
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>







        <h1 class="mt-5 text-colorC">Notre selection de séries</h1>

        <div class="d-flex flex-wrap w-100 justify-content-center">
            {% for score_ordre in score_ordres %}
                <div class="mx-2 my-4 shadow-lg rounded">

                    <figure class="position-relative m-0 d-flex flex-column justify-content-center">
                        <div class="border-gradient p-2 rounded">
                            <a  href="{{ path('series_show', {'id': score_ordre.id}) }}">
                                <img class="d-block position-relative rounded w-100 h-100" src="{{ base_url~score_ordre.image }}" />
                            </a>
                        </div>
                        <figcaption class="text-dark">

                            <div class="text-center h-100">
                                <div class="font-weight-bolder">{{ score_ordre.name }}</div>
                                <div>
                                {%  for Kind in score_ordre.Kinds %}
                                    {{ Kind.getName() }}
                                {%  endfor %}
                                </div>
                                <div>Année : {{ score_ordre.createdAt ? score_ordre.createdAt|date('Y') : '' }}</div>
                                <div>Note : {{ score_ordre.score }}</div>
                            </div>
                        </figcaption>
                    </figure>
                </div>



            {% endfor %}
        </div>
    </div>

{% endblock %}





