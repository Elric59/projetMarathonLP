        <!-- A DROITE -->
        <div class="">

            <!-- Si loged in-->
            {% if is_granted('ROLE_USER') %}


{#                <a class="btn btn-outline-secondary" href="{{ path('user_edit', {'id': app.user.id}) }}" role="button">#}
{#                    Edit Profile#}
{#                </a>#}
                <a class="btn btn-outline-danger" href="{{ path('app_logout') }}" role="button">
                    Disconnect
                </a>
                <a class="btn btn-outline-success" href="{{ path('user_show', {'id': app.user.id}) }}" role="button">
                    {{ app.user.username }}
                    {% if app.user.avatar != null %}
                        <img style="max-width:150px;" src="{{ asset(user_path~'/'~app.user.avatar)}}" class="img-thumbnail"/>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        [ADMIN]
                    {% endif %}
                </a>

                <!-- Si non loged in-->
            {% else %}
                <a class="btn-component btn bg-colorB text-white font-weight-bold rounded border-0" role="button" href="{{ path('app_login') }}">Log me</a>
                <a class="btn-component btn bg-colorB text-white font-weight-bold rounded border-0" href="{{ path('app_register') }}">S'inscrire</a>
            {% endif %}
        </div>

    </div>
</div>
