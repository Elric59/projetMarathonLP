<div class="p-4 w-100 bg-dark">
    <div class="d-flex flex-wrap justify-content-around align-items-center">



        <!-- A GAUCHE -->
        <div>
            <a href="{{ path('home') }}">
                <img style="height: 50px;" src="{{ asset(user_path~'/logo-white.png') }}">
            </a>
        </div>

        <!-- AU MILIEU-->

        <div class="row" >
            {#{% if form is defined %}
            {{ form_start(form.Recherche,{'attr':{'class':'d-flex flex-wrap'}}) }}
            {{ form_row(form.Recherche,{'attr':{'class':'bg-transparent m-2 border border-colorA text-white rounded-pill px-3 py-1 '}}) }}

            {{ form_widget(form.Choix, {'attr':{'class':'bg-transparent m-2 border border-colorA text-white rounded-pill px-3 py-1'}}) }}
            <input type="submit" class="fas fa-address-card">
            {{ form_end(form) }}
